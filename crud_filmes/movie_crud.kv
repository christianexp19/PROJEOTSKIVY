#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<FilmeItem@BoxLayout>:
    size_hint_y: None
    height: "60dp"
    orientation: "horizontal"
    spacing: "10dp"
    
    Label:
        text: root.titulo
        size_hint_x: 0.4
        text_size: self.width, None
    
    Label:
        text: root.genero
        size_hint_x: 0.3
        text_size: self.width, None
    
    Label:
        text: str(root.ano)
        size_hint_x: 0.2
        text_size: self.width, None
    
    Button:
        text: "Editar"
        size_hint_x: 0.1
        on_release: app.editar_filme(root.filme_id)
    
    Button:
        text: "Excluir"
        size_hint_x: 0.1
        on_release: app.deletar_filme(root.filme_id)

<CadastroScreen>:
    name: "cadastro"
    
    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "15dp"
        
        Label:
            text: "Cadastro de Filme"
            font_size: "24sp"
            size_hint_y: 0.2
        
        BoxLayout:
            orientation: "vertical"
            spacing: "10dp"
            
            Label:
                text: "Título:"
                size_hint_y: None
                height: "30dp"
            
            TextInput:
                id: titulo_input
                multiline: False
                size_hint_y: None
                height: "40dp"
            
            Label:
                text: "Gênero:"
                size_hint_y: None
                height: "30dp"
            
            TextInput:
                id: genero_input
                multiline: False
                size_hint_y: None
                height: "40dp"
            
            Label:
                text: "Ano:"
                size_hint_y: None
                height: "30dp"
            
            TextInput:
                id: ano_input
                multiline: False
                input_filter: "int"
                size_hint_y: None
                height: "40dp"
        
        BoxLayout:
            size_hint_y: 0.2
            spacing: "10dp"
            
            Button:
                text: "Salvar"
                on_release: root.salvar_filme()
            
            Button:
                text: "Voltar para Lista"
                on_release: app.mudar_tela("listagem")

