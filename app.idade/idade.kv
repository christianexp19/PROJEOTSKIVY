<IdadeLayout>:
    nome_input: nome_input
    idade_input: idade_input
    resultado: resultado
    historico: historico

    orientation: 'vertical'
    padding: 20
    spacing: 15
    canvas.before:
        Color:
            rgba: 0.92, 0.95, 0.98, 1  # #ebf2fa
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        Label:
            text: 'Verificador de Idade'
            font_size: '24sp'
            color: 0.02, 0.28, 0.54, 1  # #064789
            size_hint_y: None
            height: 40
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'

        TextInput:
            id: nome_input
            hint_text: 'Digite seu nome'
            foreground_color: 0.02, 0.28, 0.54, 1  # #064789
            background_color: 1, 1, 1, 1
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: idade_input
            hint_text: 'Digite sua idade'
            input_filter: 'int'
            foreground_color: 0.02, 0.28, 0.54, 1  # #064789
            background_color: 1, 1, 1, 1
            multiline: False
            size_hint_y: None
            height: 40

        Button:
            text: 'Verificar'
            background_color: 0.26, 0.48, 0.63, 1  # #427aa1
            color: 1, 1, 1, 1
            size_hint_y: None
            height: 40
            on_press: root.verificar_idade()

    Label:
        id: resultado
        text: ''
        markup: True
        font_size: '16sp'
        color: 0.02, 0.28, 0.54, 1  # #064789
        size_hint_y: None
        height: 40
        text_size: self.width, None
        halign: 'left'
        valign: 'middle'

    ScrollView:
        size_hint_y: 1

        GridLayout:
            id: historico
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 30
            row_force_default: True
            spacing: 5
            padding: 5
