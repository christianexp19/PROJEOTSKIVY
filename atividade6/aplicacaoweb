<body>
  <div class="card">
    <h2>Minha Lista de Tarefas</h2>
    <input type="text" id="tarefa" placeholder="Digite uma tarefa">
    <button class="add-btn" onclick="adicionarTarefa()">Adicionar</button>
    <ul id="lista"></ul>
  </div>

  <script>
    function adicionarTarefa() {
      const input = document.getElementById("tarefa");
      let valor = input.value.trim(); // remove espaÃ§os antes/depois

      if (valor === "") {
        alert("Digite uma tarefa!");
        return;
      }

      const li = document.createElement("li");
      li.textContent = valor;

      const botaoRemover = document.createElement("button");
      botaoRemover.textContent = "Remover";
      botaoRemover.onclick = () => li.remove();

      li.appendChild(botaoRemover);
      document.getElementById("lista").appendChild(li);

      input.value = "";
      input.focus();
    }
  </script>
</body>
